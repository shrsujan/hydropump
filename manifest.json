{
  "manifest_version": 2,
  "name": "hydropump",
  "version": "1.0.0",
  "description": "A tool that reminds you to drink water on a regular basis",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "24": "images/icon48.png"
    },
    "default_title": "Hydropump",
    "default_popup": "popup.html"
  },
  "author": "Sujan Shrestha <shrsujan2007@gmail.com>",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "incognito": "not_allowed",
  "minimum_chrome_version": "60.0.0",
  "offline_enabled": true,
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "tts",
    "ttsEngine"
  ],
  "version_name": "1.0 beta"
}